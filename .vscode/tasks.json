{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type": "shell",
			"command": "haxe",
			"args": [
				"extraParams.hxml",
				"--run",
				"haxevm.Main",
				"tests/samples/Main.hx"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "todos",
			"type": "shell",
			"command": "grep",
			"args": [
				"--color",
				"--include=\\*.hx",
				"--exclude-dir=libs",
				"-rnw",
				"'haxevm'",
				"-e",
				"'// TODO'"
			],
			"problemMatcher": []
		}
	]
}
