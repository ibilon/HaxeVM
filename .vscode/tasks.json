{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run eval",
			"type": "shell",
			"command": "haxe",
			"args": [
				"extraParams.hxml",
				"--run",
				"haxevm.Main",
				"tests/samples/expr/Main.hx"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "run cpp",
			"type": "shell",
			"command": "build/cpp/Main",
			"args": [
				"tests/samples/expr/Main.hx"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			],
			"dependsOn": "build cpp"
		},
		{
			"label": "run js",
			"type": "shell",
			"command": "node",
			"args": [
				"build/haxevm.js",
				"tests/samples/expr/Main.hx"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			],
			"dependsOn": "build js"
		},
		{
			"label": "build cpp",
			"type": "shell",
			"command": "haxe",
			"args": [
				"extraParams.hxml",
				"--main",
				"haxevm.Main",
				"-cpp",
				"build/cpp"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			]
		},
		{
			"label": "build js",
			"type": "shell",
			"command": "haxe",
			"args": [
				"extraParams.hxml",
				"--main",
				"haxevm.Main",
				"-js",
				"build/haxevm.js",
				"-lib",
				"hxnodejs",
				"-D",
				"js-es=6"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			]
		},
		{
			"label": "run tests on eval",
			"type": "shell",
			"command": "haxe",
			"args": [
				"test.hxml"
			],
			"problemMatcher": []
		},
		{
			"label": "run tests on cpp",
			"type": "shell",
			"command": "build/test_cpp/Test",
			"args": [],
			"problemMatcher": [],
			"dependsOn": "build test cpp"
		},
		{
			"label": "build test cpp",
			"type": "shell",
			"command": "haxe",
			"args": [
				"extraParams.hxml",
				"libs/utest/extraParams.hxml",
				"-main",
				"tests.Test",
				"-cpp",
				"build/test_cpp/",
				"-D",
				"noCoverage"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error"
			]
		},
		{
			"label": "todos",
			"type": "shell",
			"command": "grep",
			"args": [
				"--color",
				"--include=\\*.hx",
				"--exclude-dir=libs",
				"-rnw",
				"'haxevm'",
				"-e",
				"'// TODO'"
			],
			"problemMatcher": []
		},
		{
			"label": "checkstyle",
			"type": "shell",
			"command": "haxelib",
			"args": [
				"run",
				"checkstyle",
				"-s",
				"haxevm"
			],
			"problemMatcher": []
		}
	]
}
